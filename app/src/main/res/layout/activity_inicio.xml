<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.networks.test.esi.InicioActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inicio_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/bordinha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inicio_container1">

    <ImageView
        android:id="@+id/logo_inicio"
        android:contentDescription="@string/logo_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/helitop2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inicio_appName"/>

        <TextView
            android:id="@+id/inicio_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="10dp"
            android:textColor="@color/corDestaque"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/inicio_container1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/bot_perf_inicio"
            android:text="@string/perfil_string"
            android:layout_margin="10dp"
            android:background="@drawable/botoes"
            android:textColor="@color/branco"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/bot_inserir_inicio"
            android:text="@string/inserir_inventario_string"
            android:layout_margin="10dp"
            android:background="@drawable/botoes"
            android:textColor="@color/branco"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bot_perf_inicio"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/bot_busc_inicio"
            android:text="@string/busca_inventario_string"
            android:layout_margin="10dp"
            android:background="@drawable/botoes"
            android:textColor="@color/branco"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bot_inserir_inicio"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/bot_relatorio_inicio"
            android:text="@string/relat_vendas_string"
            android:layout_margin="10dp"
            android:background="@drawable/botoes"
            android:textColor="@color/branco"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bot_busc_inicio"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>